<% layout("/layouts/boilerplate") %>

  <main>
    <div class="container mx-auto flex flex-col items-center md:text-white">
      <div class="md:w-full md:mt-4 md:flex md:flex-row md:justify-between">
        <header class="p-4 flex flex-col gap-1 text-center md:justify-end md:text-left">
          <h1 class="text-2xl font-semibold md:text-5xl">
            <%= campground.title %>
          </h1>
          <h2 class="font-semibold md:text-3xl">
            <%= campground.location %>
          </h2>
        </header>
        <div
          class="w-screen h-64 md:absolute md:top-0 md:left-0 md:h-1/2 md:-z-10 md:before:block md:before:w-full md:before:h-full md:before:absolute md:before:bg-gradient-to-b md:before:from-transparent md:before:to-black">
          <img src="<%= campground.image %>" alt="<%= campground.title %>"
            class="w-full h-full object-cover object-center">
        </div>
      </div>
      <p class="my-4 px-4 md:text-xl">
        <%= campground.description %>
      </p>
      <div class="w-full my-5 px-4 flex justify-between">
        <a href="/campgrounds/<%= campground.id %>/edit"
          class="px-4 py-2 bg-blue-500 text-white font-bold rounded-xl">Edit</a>
        <form action="/campgrounds/<%= campground.id %>?_method=DELETE" method="post">
          <button class="px-4 py-2 bg-red-500 text-white font-bold rounded-xl">Delete campground</button>
        </form>
      </div>
      <a href="/campgrounds" class="mb-8 font-bold underline">All Campgrounds</a>
    </div>
  </main>